{
    "$schema": "https://swc.rs/schema.json",
    "jsc": {
        "parser": {
            "syntax": "typescript",
            "decorators": true,
            "dynamicImport": true
        },
        "transform": {
            "legacyDecorator": true,
            "decoratorMetadata": true
        },
        "target": "es2021",
        "keepClassNames": true,
        "baseUrl": "./"
    },
    "module": {
        "type": "commonjs"
    },
    "sourceMaps": true,
    "minify": false
}