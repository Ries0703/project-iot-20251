{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "compilerOptions": {
    "webpack": true,
    "deleteOutDir": true
  },
  "projects": {
    "consumer-service": {
      "type": "application",
      "root": "apps/consumer-service",
      "entryFile": "main",
      "sourceRoot": "apps/consumer-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/consumer-service/tsconfig.app.json"
      }
    },
    "api-service": {
      "type": "application",
      "root": "apps/api-service",
      "entryFile": "main",
      "sourceRoot": "apps/api-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-service/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "database": {
      "type": "library",
      "root": "libs/database",
      "entryFile": "index",
      "sourceRoot": "libs/database/src",
      "compilerOptions": {
        "tsConfigPath": "libs/database/tsconfig.lib.json"
      }
    }
  }
}